// ============================================================
//  firestore.rules
//  Firestore Security Rules for Chess Tournament Scoreboard
//
//  HOW TO DEPLOY:
//  Option A (Firebase Console):
//    1. Go to Firebase Console → Firestore → Rules tab
//    2. Copy and paste the rules below
//    3. Click "Publish"
//
//  Option B (Firebase CLI):
//    1. Install: npm install -g firebase-tools
//    2. Run: firebase login
//    3. Run: firebase init firestore
//    4. Copy these rules into firestore.rules
//    5. Run: firebase deploy --only firestore:rules
// ============================================================

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Tournaments Collection ──────────────────────────────
    match /tournaments/{tournamentId} {

      // PUBLIC READ: Anyone can view tournaments and leaderboards
      allow read: if true;

      // AUTHENTICATED CREATE: Any logged-in admin can create a tournament
      // We ensure the createdBy field matches the user's UID
      allow create: if request.auth != null 
        && request.resource.data.createdBy == request.auth.uid;

      // OWNER UPDATE: Only the admin who created the tournament can update it
      // This prevents admins from accidentally or maliciously editing other admins' events
      allow update: if request.auth != null 
        && resource.data.createdBy == request.auth.uid;

      // OWNER DELETE: Only the admin who created the tournament can delete it
      allow delete: if request.auth != null 
        && resource.data.createdBy == request.auth.uid;
    }

    // ── Default: Deny everything else ──────────────────────
    // Any collection not explicitly listed above is denied
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
